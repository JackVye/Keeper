@{
    //This is the set of divs that will lay out a row for one area in the dungeon
}

@model Keeper.Models.Region


<div class="card foreground-card">
    <div class="card-body d-flex justify-content-stretch">
        <div class="row nowrap-row stretch-to-width">
            <div class="col-4 d-flex">
                <p class="middle">@Model.name</p>
            </div>
            <div class="col-3 d-flex">
                <p class="middle">@Model.population.Count() units.</p>
            </div>
            <div class="col-3 d-flex">
                <p class="middle">@Model.traps.Count() traps.</p>
            </div>
            <div class="col-2 d-flex">
                <form id="modify" method="POST" action="/Home/Modify" role="form">
                    <input type="hidden" id="name" name="name" value="@Model.name">
                    <button type="submit" class="btn btn-success">Modify</button>
                </form>
            </div>
        </div>
    </div>
</div>

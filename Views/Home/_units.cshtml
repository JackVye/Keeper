@{
    //This is the set of divs that will lay out a row for one area in the dungeon
}

@model Keeper.Models.Unit

@{
    string modify = "/Home/Modify&name=" + Model.name;
}

<div class="card foreground-card">
    <div class="card-body d-flex justify-content-stretch">
        <div class="row nowrap-row stretch-to-width">
            <div class="col-12 d-flex">
                <p class="middle">@Model.name the @Model.race</p>
            </div>
        </div>
    </div>
</div>
